#!/bin/sh

start() {
  <% @processes.each do |user, locations| %>
      <% locations.each do |loc| %>
        <% if loc.include?("\*") %>
    for f in <%= loc %>
    do
      su --login <%= user %> $f
    done
        <% else %>
    su --login <%= user %> <%= loc %>
        <% end %>
      <% end %>
    <% end %>
}
stop() {
<% @processes.keys.each do |user| %>
    while pkill -QUIT -u <%= user %> niet; do sleep 1; done
<% end %>
}

case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart)
        # Graceful restart
        stop && start
        ;;
  kill)
        while pkill -KILL niet; do sleep 1; done
        ;;
  *)
    echo "Usage: $0 {start|stop|restart|kill}" >&2
        exit 1
        ;;
  esac

  exit 0
